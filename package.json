{
  "name": "x402-token-mint",
  "version": "1.0.0",
  "description": "Token minting project using x402 payment protocol with smart contract deployment",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "server": "node server.js",
    "client": "node client.js",
    "test": "node test-mint.js",
    "test:mainnet": "node test-mainnet.js",
    "deploy": "bash deploy.sh",
    "compile": "npx hardhat compile",
    "deploy:contract": "npx hardhat run scripts/deploy.ts --network base-mainnet",
    "deploy:testnet": "npx hardhat run scripts/deploy.ts --network base-sepolia",
    "verify": "npx hardhat verify --network base-mainnet"
  },
  "keywords": ["x402", "token", "mint", "payment", "blockchain", "base", "smart-contract"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "hardhat": "^2.19.2",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}
